
<h1 class="text-center p-3">Sponsors</h1>

<div class="row">
  <% @sponsors.each do |sponsor| %>

    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 d-flex justify-content-center">
      <div class="card text-center mb-3" style="width: 20rem; height: 22rem;">
        <%= image_tag(sponsor.image, size: "317x200") %>
        <div class="card-body">
          <h5 class="card-title"><%= sponsor.title %></h5>
          <%= link_to"Visit Site", sponsor.website, class: "btn btn-primary", target: :_blank %>
          <% if user_signed_in? %>
            <br>
            <%= link_to "Show this sponsor", sponsor, class:"btn border-bottom" %>
          <% end %>
        </div>
      </div>
      </div>
  <% end %>
  </div>
  </div>
</div>
