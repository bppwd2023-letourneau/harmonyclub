<h1 class="text-center p-3">Photo Albums</h1>

<div class="row">
  <% @albums.each do |album| %>

    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 d-flex justify-content-center">
      <div class="card text-center mb-3" style="width: 18rem; height: 13rem;">
        <div class="card-body">
          <h5 class="card-title"><%= album.title %></h5>
          <h5 class="card-title">Description: <%= album.description %></h5>
          <% if user_signed_in? %>
            <br>
            <%= link_to "Show this Album", album, class:"btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
      </div>
  <% end %>
  </div>
  </div>
</div>
