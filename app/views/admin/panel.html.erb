<h1 class="p-3 text-center">Admin Panel</h1>



<div class="row text-center">

    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Events</h5>
            <%= link_to"Create New Event", new_event_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Events", events_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>


    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Sponsors</h5>
            <%= link_to"Create New Sponsors", new_sponsor_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Sponsors", sponsors_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>

    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Photos</h5>
            <%= link_to"Create New Photo", new_photo_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Photos", photos_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>

</div>


<div class="row text-center p-3">

    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Albums</h5>
            <%= link_to"Create New Album", new_album_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Albums", albums_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>


    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Pages</h5>
            <%= link_to"Create New Page", new_page_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Pages", pages_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>

    <% if current_user.role == "Developer" %>
    <div class="col-4 d-flex justify-content-center p-3">

        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Sections</h5>
            <%= link_to"Create New Section", new_section_path, class:"btn btn-primary" %>
            <%= link_to"Show All Created Sections", sections_path, class:"btn btn-secondary mt-3" %>
            </div>
        </div>

    </div>
    <% end %>

</div>