<div class="text-center">

<h1 class="p-3"><%= @photo.title %></h1>
<h5> Location : <%= @photo.album.title %></h5>
<h5> Description? : <%= @photo.description %></h5>

<div>
    <%= link_to "Edit this photo", edit_photo_path(@photo), class: "btn btn-warning mt-2" %>

    <%= button_to "Destroy this photo", @photo, method: :delete, class: "btn btn-danger mt-2" %>

    <%= link_to "Back to photos", photos_path, class: "btn btn-primary mt-2 mb-2" %>
</div>
</div>
