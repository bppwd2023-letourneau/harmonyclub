<h1 class="text-center p-3">Photos</h1>

<div class="row">
  <% @photos.each do |photo| %>

    <div class="col-lg-4 d-flex justify-content-center">
      <div class="card text-center mb-3" style="width: 18rem; height: 24rem;">
        <div class="card-body">
          <h5 class="card-title">Title: <%= photo.title %></h5>
          <h5 class="card-title">Album: <%= photo.album.title %></h5>
          <h5 class="card-title">Description: <%= photo.description %></h5>
          <%= image_tag(photo.image, size: "250x180") %>
          <% if user_signed_in? %>
            <br>
            <%= link_to "Show this Photo", photo, class:"btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
      </div>
  <% end %>
  </div>
  </div>
</div>