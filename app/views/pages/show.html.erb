<div class="text-center mb-0">
<h1 class="text-center p-3"> <%= @page.title %></h1>

<%= @page.content %>




<% if user_signed_in? %>
<div class="mb-0">
  <%= link_to "Edit this Page", edit_page_path(@page), class:"btn btn-warning mb-3" %>

  <%= button_to "Destroy this Page", @page, method: :delete, class:"btn btn-danger mb-3" %>
  
  <%= link_to "Back to pages", pages_path, class:"btn btn-primary mb-3" %>
</div>

<% end %>

</div>
