<div class="text-center">
<h1 class="text-center p-3"> <%= @page.title %></h1>
<h5 class="text-center"> Section: <%= @page.section.title %></h5>

<p> Content: <%= @page.content %> </p>

<%= link_to "Back to pages", pages_path, class:"btn btn-primary mb-3" %>


<% if user_signed_in? %>
<div>
  <%= link_to "Edit this event", edit_page_path(@page), class:"btn btn-warning mb-3" %>

  <%= button_to "Destroy this event", @page, method: :delete, class:"btn btn-danger mb-3" %>
</div>

<% end %>

</div>
